{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Najahni backend documentation",
    "description": "My User Project Application API"
  },
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "firstname": {
            "type": "string",
            "required": "true"
          },
          "lastname": {
            "type": "string",
            "required": "true"
          },
          "email": {
            "type": "string",
            "required": "true"
          },
          "password": {
            "type": "string",
            "required": "true"
          },
          "isVerified": {
            "type": "boolean",
            "default": false
          },
          "role": {
            "type": "string",
            "enum": [
              "Student",
              "Trainer"
            ],
            "default": "Student"
          },
          "otp": {
            "type": "string",
            "required": "false"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "enum": "-Science - Programming - Computing - Mechanics - Business  - Soft skills - Language - Arts - Multimedia",
            "required": true
          }
        }
      },
      "Course": {
        "properties": {
          "title": {
            "type": "string",
            "required": "true"
          },
          "description": {
            "type": "string",
            "required": "true"
          },
          "isPaid": {
            "type": "boolean",
            "required": "false"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "required": "false"
          },
          "price": {
            "type": "number",
            "required": false
          },
          "isArchived": {
            "type": "Boolean",
            "required": "false",
            "default": "false"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "enum": "-Science - Programming - Computing - Mechanics - Business -Soft skills - Language - Arts - Multimedia"
          },
          "level": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "enum": "-Beginner - Amateur - Advanced"
          }
        }
      },"Quiz": {
        "properties": {
          "quizid": {
            "type": "string",
            "required": "true"
          },
          "question": {
            "type": "string",
            "required": "true"
          },
          "correctIndex": {
            "type": "number",
            "required": "true"
          },
          "props": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Section": {
        "properties": {
          "title": {
            "type": "string",
            "required": "true"
          }
        }
      }
    }
  },
  "host": "localhost:9090",
